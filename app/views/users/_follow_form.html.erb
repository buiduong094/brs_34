<div id="follow_form">
  <% if current_user.following? @user %>
    <%= form_for current_user.active_relationships
      .find_by(followed_id: @user.id),
      html: {method: :delete}, remote: true do |f| %>
      <%= f.submit t("admin.users.unfollow"), class: "btn btn-default form-control" %>
    <% end %>
  <% else %>
    <%= form_for current_user.active_relationships.build,
      remote: true do |f| %>
      <div><%= hidden_field_tag :followed_id, @user.id %></div>
      <%= f.submit t("admin.users.follow"), class: "btn btn-primary form-control" %>
    <% end %>
  <% end %>
</div>
