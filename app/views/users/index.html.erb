<% provide :title, t("user.all") %>
<h1><%= t "user.all" %></h1>
<div class="search-form">
  <%= search_form_for @q do |f| %>
    <div class="field">
      <%= f.text_field :name_cont, class: "form-control",
        placeholder: t("admin.users.search_placeholer") %>
    </div>
  <% end %>
</div>
<div class="row">
  <div class="col-md-12">
    <table class="table table-striped">
      <tr>
        <th><%= t "users.name" %></th>
        <th><%= t "admin.users.table.email" %></th>
        <th><%= t "users.avatar" %></th>
      </tr>
      <% @users.each do |user| %>
        <tr>
          <td><%= link_to user.name, user %></td>
          <td><%= user.email%></td>
          <td>
            <% if user.avatar.present? %>
              <%= link_to image_tag(user.avatar, size: Settings.users.size), user %>
            <% else %>
              <%= link_to image_tag(Settings.users.url, size: Settings.users.size),
                user %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </table>
    <%= paginate @users %>
    <%= page_entries_info @users %>
  </div>
</div>
