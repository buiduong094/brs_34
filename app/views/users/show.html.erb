<% provide :title, @user.name %>
<div class="panel panel-info">
  <div class="profile">
    <div class="profile_left">
      <div class="row">
        <div class="col-lg-7">
          <h1><%= t "page.users.profile.my_profile", user_name: @user.name %></h1>
          <table class="tbody_profile table">
            <tbody>
              <tr>
                <td><b><%= t "admin.users.td_name" %></b></td>
                <td><%= @user.name %></td>
              </tr>
              <tr>
                <td><b><%= t "admin.users.td_email" %></b></td>
                <td><%= @user.email %></td>
              </tr>
            </tbody>
          </table>
        </div>
        <div class="col-lg-1"></div>
        <div class="col-lg-3">
          <aside>
            <section>
              <h1>
                <%= image_tag(get_avatar_in_user(@user),
                  size: Settings.users.size_ava) %>
              </h1>
            </section>
          </aside>
          <% unless current_user == @user %>
            <%= render "follow_form" %>
          <% end %>
          <section class="stats">
            <%= render "shared/stats" %>
          </section>
        </div>
      </div>
    </div>
    <div class="profile_right">
    </div>
  </div>
  <div class="panel-body">
    <% if @support.favorites.any? %>
      <div class="col-lg-12 favourites">
        <br />
        <div><strong><%= t "books.favourite" %>:</strong></div>
        <br />
        <%= render partial: "book_status/book_status",
          collection: @support.favorites, as: :book_status %>
      </div>
    <% end %>
    <% if @support.reads.any? %>
      <div class="col-lg-12 book_reads">
        <br />
        <div><strong><%= t "books.read" %>:</strong></div>
        <br />
        <%= render partial: "book_status/book_status",
          collection: @support.reads, as: :book_status %>
      </div>
    <% end %>
    <% if @support.readings.any? %>
      <div class="col-lg-12 book_readings">
        <br />
        <div><strong><%= t "books.reading" %>:</strong></div>
        <br />
        <%= render partial: "book_status/book_status",
          collection: @support.readings, as: :book_status %>
      </div>
    <% end %>
  </div>
</div>
<input type="hidden" class="page-scroll" value="users"/>
