<% @requests.each_with_index do |request, index| %>
  <tr>
    <th scope="row"><%= index_in_list index, Settings.requests.per_page %></th>
    <td><%= request.book_name %></td>
    <td><%= localize_time request.created_at %></td>
    <td><%= request.status %></td>
    <td>
      <% if Request.statuses[request.status] == Request.statuses[:waitting] %>
        <%= link_to t("requests.table.show"), request_path(request),
          class: "btn btn-primary" %>
        <%= link_to t("requests.table.delete"), request_path(request),
          method: :delete, data: {confirm: t("requests.table.confirm")},
          class: "btn btn-danger" %>
      <% end %>
    </td>
  </tr>
<% end %>
