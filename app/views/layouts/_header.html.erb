<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to link_to t(:app_name), root_path, id: "logo" %>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <li class="<%= :active if current_page?(root_path) %>">
          <%= link_to t(:home), root_path %>
        </li>
        <% if user_signed_in? %>
          <li class="<%= :active if current_page?(requests_path) %>">
            <%= link_to t("static_pages.header.my_requests"), requests_path %>
          </li>
          <li class="<%= :active if current_page?(users_path) %>">
            <%= link_to t("static_pages.header.all_user"), users_path %>
          </li>
          <li class="<%= :active if current_page?(books_path) %>">
            <%= link_to t("static_pages.header.books"), books_path %>
          </li>
          <li class="dropdown <%= :active if current_page?(current_user) %>">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t "header.account" %><b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t("static_pages.header.profile"), current_user %>
              </li>
              <li>
                <%= link_to t("static_pages.header.setting"),
                  edit_user_registration_path(current_user) %>
              </li>
              <li class="divider"></li>
              <li>
                <%= link_to t("static_pages.header.logout"),
                  destroy_user_session_path, method: :delete %>
              </li>
            </ul>
          </li>
        <% else %>
          <li>
            <%= link_to t("static_pages.header.login"),
              new_user_session_path %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
