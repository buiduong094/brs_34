<div class="section col-md-10 col-md-offset-1">
  <br />
  <% @book_status.each do |book_status| %>
    <div class ="col-md-3">
      <%= link_to image_tag(get_picture(book_status.book),
        size: Settings.users.size_book), book_status.book %>
      <p><%= link_to book_status.book.title, book_path(book_status.book) %></p>
      <p><%= :Favorite if book_status.is_favourite %></p>
      <p>
        <%= :Reading if book_status.reading_status == 1 %>&nbsp
        <%= :Read if book_status.reading_status == 0 %>&nbsp
      </p>
      <br />
    </div>
  <% end %>
</div>
<div class="page center">
  <%= paginate @book_status %>
</div>
