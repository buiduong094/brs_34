<div class="row">
  <%= form_for [:admin, @book] do |f| %>
    <%= render "shared/error_messages", object: @book %>
    <div class="col-md-3"></div>
    <div class="col-md-6">
      <div class="form-group">
        <%= f.label :title %>
        <%= f.text_field :title, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :author %>
        <%= f.text_field :author, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :number_of_page %><br>
        <%= f.number_field :number_of_page, class: "form-control" %>
      </div>

      <div class="form-group">
        <%= f.label :publish_date %><br>
        <%= f.text_field :publish_date, class: "form-control",
          data: {date_format: I18n.t("application.general.date_format")},
          placeholder: t("application.general.date_format") %>
      </div>

      <div class="form-group">
        <%= f.label :category %><br>
        <%= f.collection_select :category_id, @categories, :id, :name, {},
          class: "form-control" %>
      </div>

      <span class="image">
        <%= f.label :image %><br>
        <%= f.file_field :image, accept: "image/jpeg,image/gif,image/png",
          class: "form-control" %>
      </span>
      <br />
      <div class="form-group">
        <%= f.submit t(:submit), class: "btn btn-primary form-control" %>
      </div>

      <div class="form-group">
        <%= link_to t(". back"), admin_books_path, class: "btn btn-primary" %>
      </div>
    </div>
  <% end %>
</div>
