<div id="btntop" style="display: hidden;">
  <a href="#top" id="top">
    <span>
      <%= link_to t("admin.books.add"), new_admin_book_path,
        class: "btn btn-md btn-primary" %>
    </span>
  </a>
</div>

<table class="table table-hover">
  <thead>
    <tr class="info">
      <th><%= t "admin.books.table.index" %></th>
      <th><%= t "admin.books.table.picture" %></th>
      <th><%= t "admin.books.table.title" %></th>
      <th><%= t "admin.books.table.category" %></th>
      <th><%= t "admin.books.table.author" %></th>
      <th><%= t "admin.books.table.publish_date" %></th>
      <th><%= t "admin.books.table.number_page" %></th>
      <th><%= t "admin.books.table.rate_avg" %></th>
      <th></th>
    </tr>
  </thead>
  <tbody>

    <% @books.each_with_index do |book, index| %>
      <tr>
        <th scope="row"><%= index_in_list index,
          Settings.admin.books.per_page %></th>
        <td>
          <% if book.image.present? %>
            <%= link_to image_tag(book.image, size: Settings.admin.books.size),
              admin_books_path %>
          <% else %>
            <%= link_to image_tag(Settings.admin.books.url,
              size: Settings.admin.books.size), admin_books_path %>
          <% end %>
        </td>
        <td><%= link_to book.title, "#" %></td>
        <td><%= book.category.name %></td>
        <td><%= book.author %></td>
        <td><%= l book.publish_date, format: :publish_date %></td>
        <td><%= book.number_of_page %></td>
        <td>
          <% if rate_average = book.rate_average %>
            <%= rate_average.round Settings.admin.books.round_rate_average %>
          <% else %>
            <%= t "models.book.no_review"%>
          <% end %>
        </td>
        <td>
          <%= link_to t("admin.books.table.edit"), edit_admin_book_path(book),
            class: "btn btn-primary" %>
          <%= link_to t("admin.books.table.delete"), admin_book_path(book),
            method: :delete, data: {confirm: t("admin.messages.confirm")},
            class: "btn btn-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= paginate @books %>
<%= page_entries_info @books %>
